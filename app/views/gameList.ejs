<%- include('partials/header') %>
<%- include('partials/nav') %>

<section class="game-section">
    <div>
        <h2 class="welcome"> Liste des jeux </h2>
    </div>
    <div class="games">
        <% for (let game of games) { %>
            <div class="game">
                <a href="/gameList/<%=game.id%>"><h3><%= game.title %></h3></a>
                <section class="description-section">
                    <span><%= game.description %></span>
                    <% for (let theme of game.gameTheme) { %>
                        <p><%= theme.getName() %></p>
                    <% } %>
                </section>
            </div>
        <% } %>
    </div>
</section>
    
<%- include('partials/footer') %>