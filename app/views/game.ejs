<%- include('partials/header') %>
<%- include('partials/nav') %>

    <div class="game-solo">
        <h2 class="welcome"><%= game.title %></h2>
        <p><%= game.description %></p>
        <p><%= game.rule %></p>
        <h4>Niveau de difficulté possible :</h4>
        <% for (let difficulty of game.gameDifficulties) { %>
            <ul>
                <li>
                    <span><%= difficulty.title %></span>
                    <p>
                        Avec ce niveau de difficulté, multiplie ton score par <%= difficulty.coefficient %> !
                    </p>
                    <a href="#"><button type="button">Jouer</button></a>
                </li>
            </ul>
        <% } %>
        <h5>Résultats pour le jeu : <%= game.title %></h5>
        <ul>
            <% for (let result of game.gameResult) { %>
                <li>
                    <span><%= result.point %> points, le <%= result.created_at%></span>
                </li>
            <% } %>
        </ul>
    </div>
    
<%- include('partials/footer') %>